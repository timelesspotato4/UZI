<title>Wingdings Chatroom</title>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #000;
        color: #fff;
    }
    .chat-container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #222; /* Darker shade of black */
    }
    .message {
        margin-bottom: 10px;
    }
    .message .user {
        font-weight: bold;
        color: blue;
    }
    .message .text {
        font-family: Wingdings;
        color: #fff; /* White */
    }
    input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-top: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        background-color: #444; /* Darker shade of black */
        color: #fff; /* White */
    }
    button {
        padding: 10px 20px;
        margin-top: 10px;
        border: none;
        border-radius: 5px;
        background-color: blue;
        color: #fff;
        cursor: pointer;
    }
